{% extends "DestinyAppBundle::backendBase.html.twig" %}

{% block titleBackend %}{{ 'portada.backend.title' | trans }}{% endblock %}
{% block backendBody %}
	<div class="col-md-6">
		<div class="box">
	<div class="box-header with-transitions with-border clearfix">
	<h3 class="box-title">
		{{ 'portada.user.lastLogin' | trans }}
		</h3>
		</div>
			<div class="box-body table-responsive no-padding">
			<table class="table table-condensed">
				<thead>
					<tr>
						<td>#</td>
						<td>{{ 'portada.user.name' | trans }}</td>
						<td>{{ 'portada.user.lastLogin' | trans }}</td>
					</tr>
				</thead>
				<tbody>
				{% for user in activeUsers %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>
							{{ user }}
						</td>
						<td>
							{{ user.lastLogin | date ('d/m/y H:i') }}
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	</div>
	<div class="col-md-6">
	<div class="box">
		<div class="box-header with-transitions with-border clearfix">
			<h3 class="box-title">
				{{ 'portada.mensajes.sinleer' | trans }}
			</h3>
		</div>
		<div class="box-body table-responsive no-padding">
			<table class="table table-condensed">
				<thead>
				<tr>
					<td>#</td>
					<td>{{ 'portada.mensajes.titulo' | trans }}</td>
					<td>{{ 'portada.mensajes.usuario' | trans }}</td>
					<td>{{ 'portada.mensajes.fechaCreacion' | trans }}</td>
				</tr>
				</thead>
				<tbody>
				{% for message in messages %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>
							<a href="{{ path('editBackend',{'entity':'mensajes','element':message.slug }) }}">

							{{ message.asunto }}
								</a>
						</td>
						<td>
							{{ message.email }}
						</td>
						<td>
							{{ message.fechaCreacion | date ('d/m/y H:i') }}
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
